<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".TenantByUnitListActivity" >
 	
 	<LinearLayout
 	    android:layout_width="fill_parent"
 	    android:layout_height="match_parent"
 	    android:background="@drawable/eligibility_layout"
 	    android:orientation="vertical"
 	    android:paddingBottom="10dip"
 	    android:paddingLeft="5dp"
 	    android:paddingRight="5dip"
 	    android:paddingTop="5dip" >

 	    <TableRow
 	        android:layout_width="match_parent"
 	        android:layout_height="1dp" />

 	    <FrameLayout
 	        android:id="@+id/fragment_content_12"
 	        android:layout_width="match_parent"
 	        android:layout_height="40dip"
 	        android:layout_weight="0.69"
 	        android:background="@drawable/act_bg"
 	        android:padding="1dp" >

 	        <ListView
 	            android:id="@+id/lvTenantList"
 	            android:layout_width="match_parent"
 	            android:layout_height="match_parent" />
 	    </FrameLayout>
		<TableRow
 	        android:layout_width="match_parent"
 	        android:layout_height="1dp" />

	 	<LinearLayout
	 	    android:layout_width="fill_parent"
	 	    android:layout_height="wrap_content" >
	 	</LinearLayout>
 		<TableRow
 	        android:layout_width="match_parent"
 	        android:layout_height="1dp" />

 	    <EditText
 	        android:id="@+id/txtMailSubject"
 	        android:layout_width="fill_parent"
 	        android:layout_height="37dp"
 	        android:gravity="top"
 	        android:hint="Subject"
 	        android:inputType="textMultiLine"
 	        android:lines="7" />
 	    <TableRow
 	        android:layout_width="match_parent"
 	        android:layout_height="2dp" />

 	    <EditText
 	        android:id="@+id/txtMailcontent"
 	        android:layout_width="fill_parent"
 	        android:layout_height="132dp"
 	        android:gravity="top"
 	        android:hint="Description"
 	        android:inputType="textMultiLine"
 	        android:lines="7" />

 	    <Button
 	        android:id="@+id/btnAttchAndSend"
 	        android:layout_width="match_parent"
 	        android:layout_height="wrap_content"
 	        android:text="Attach and Send"
 	        android:textColor="#305B07"
 	        android:textSize="13sp" />

 		 <Button
 	        android:id="@+id/btnSendMail"
 	        android:layout_width="match_parent"
 	        android:layout_height="wrap_content"
 	        android:layout_gravity="center"
 	        android:text="Send Mail"
 	        android:textColor="#305B07"
 	        android:textSize="13sp" />
 	</LinearLayout>

</merge>